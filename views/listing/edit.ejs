<% layout("layouts/boilerplat.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2 ">
            <br><br>
    <h3 class="edit-heading">Edit Your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT " novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="listing-image-container">
            <img src="<%= originalImgURL %>" alt="listing image" class="listing-image">
          </div>


        
        <div  class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control"required>
            <div class="invalid-feedback">enter proper title</div>

        </div>
        
        
        <div  class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%></textarea> 
            <div class="invalid-feedback">enter proper description</div>
   
        </div>
       


        <div  class="mb-3">
            <label for="img-url" class="form-label">Uplode New Image</label>
            <input type="file" name="listing[image]"class="form-control">        
        </div>

        
          

        <div class="row">
        <div  class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" value="<%=listing.price%>"class="form-control"required>
            <div class="invalid-feedback">enter proper price</div>

        </div>
        <div  class="mb-3 col-md-8 ">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%=listing.country%>"class="form-control"required>
            <div class="invalid-feedback">enter proper country name</div>

        </div>
        </div>
       

        <div  class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%=listing.location%>"class="form-control"required>
            <div class="invalid-feedback">enter proper location</div>

        </div>

       
       
        <button class="btn btn-dark edit-btn">EDIT</button><br><br>
    </form>
    </div>
    </div>
</body>





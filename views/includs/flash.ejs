<% if (success.length > 0) { %>  
    <div class="alert alert-success alert-dismissible fade show mt-3 custom-alert" role="alert">
      <%= success %> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        
      </button>
    </div>
  <% } %>

  <% if (error.length > 0) { %>  
    <div class="alert alert-danger alert-dismissible fade show mt-3 custom-alert-error" role="alert">
      <%= error %> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        
      </button>
    </div>
  <% } %>
  